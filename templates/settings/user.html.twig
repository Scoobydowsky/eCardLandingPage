{% extends 'base.html.twig' %}
    {% block body %}
        {% include '/components/nav.html.twig' %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible mt-5 mb-5" role="alert"><button class="btn-close" type="button" aria-label="Close" data-bs-dismiss="alert"></button><span><strong>Error</strong> {{ message }}</span></div>
        {% endfor %}
        {% for message in app.flashes('warning') %}
            <div class="alert alert-warning alert-dismissible mt-5 mb-5" role="alert"><button class="btn-close" type="button" aria-label="Close" data-bs-dismiss="alert"></button><span><strong>Warning</strong> {{ message }}</span></div>
        {% endfor %}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible mt-5 mb-5" role="alert"><button class="btn-close" type="button" aria-label="Close" data-bs-dismiss="alert"></button><span><strong>Success</strong> {{ message }}</span></div>
        {% endfor %}
        <div class="bg-white just bg-opacity-75 pb-5">
            <div class="container text-center">
                <div class="row">
                    <div class="col">
                        <h1>Edit User Data</h1>
                        <form method="post" action="{{ path('app_change_user_data') }}">
                            <div class="input-group"><span class="input-group-text">Name:</span><input class="form-control" name="name" value="{{ user.name }}" type="text"></div>
                            <div class="input-group mt-2"><span class="input-group-text">Surname:</span><input class="form-control" name="surname" value="{{ user.surname }}" type="text"></div>
                            <div class="input-group mt-2"><span class="input-group-text">Nick:</span><input class="form-control" name="nick" value="{{ user.nick }}" type="text"></div>
                            <div class="input-group mt-2"><span class="input-group-text">Description:</span><textarea name="description" class="form-control">{{ user.description }}</textarea></div>
                            <button class="btn btn-success mt-3 d-flex w-100 justify-content-center" type="submit"><i class="fa-regular fa-floppy-disk text-center d-xl-flex align-content-start align-self-center justify-content-xl-center me-2"></i> Save</button>
                        </form>
                    </div>
                    <div class="col">
                        <h1>Change Profile Picture</h1>
                        <form>
                            <div class="input-group">
                                <h5>Current photo:</h5>
                                <div class="row justify-content-center">
                                    <img class="rounded-circle w-50" src="{{ asset('img/Profile.png') }}" alt="profilePicture">
                                </div>
                                <div class="row w-100 mt-3">
                                    <input type="file" class="form-control w-75" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" aria-label="Upload">
                                    <button class="btn btn-success w-25" type="submit" id="inputGroupFileAddon04"><i class="fa-solid fa-upload text-center me-2"></i>Upload</button>
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <h1>Change login</h1>
                        <form method="POST" action="{{ path('app_change_login') }}">
                            <div class="input-group"><span class="input-group-text">Login:</span><input class="form-control" name="login" type="text"></div>
                            <button class="btn btn-success mt-3 d-flex w-100 justify-content-center" type="submit">Change</button>
                        </form>
                    </div>
                    <div class="col">
                        <h1>Change password</h1>
                        <form method="post" action="{{ path('app_change_password') }}">
                            <div class="input-group"><span class="input-group-text">Old password:</span><input class="form-control" name="oldPassword" type="password"></div>
                            <div class="input-group mt-2"><span class="input-group-text">New password:</span><input class="form-control" name="newPassword" type="password"></div>
                            <div class="input-group mt-2"><span class="input-group-text">Re-type new password:</span><input class="form-control" name="reTypedPassword" type="password"></div>
                            <button class="btn btn-success mt-3 d-flex w-100 justify-content-center" type="submit"> <i class="fa-solid fa-key text-center d-xl-flex align-content-start align-self-center justify-content-xl-center me-2"></i> Change</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}